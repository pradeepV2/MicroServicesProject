pipeline {
    agent any
    
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/pradeepV2/MicroServicesProject.git'
            }
        }
        stage('build') {
            steps {
                sh 'docker build -t $image .'
            }
        }
        stage('tag') {
            steps {
                sh 'docker tag $image $repo'
            }
        }
        stage('push') {
            steps {
                sh 'docker login -u username -p $password'
                sh 'docker push $repo'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker stack deploy -c docker-compose.yml paytm'
            }
        }
    }
}


NOTE: ADD PARAMETERS FOR VARIABLES 
